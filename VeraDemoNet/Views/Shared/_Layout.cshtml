<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body role="document">
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <li class="@(Html.ActivePage("Blab", "Feed") == "selected" ? "active" : "")" role="presentation">@Html.ActionLink("Feed", "Feed", "Blab")</li>
                    <li class="@(Html.ActivePage("Blab", "Blabbers") == "selected" ? "active" : "")" role="presentation">@Html.ActionLink("Blabbers", "Blabbers", "Blab")</li>
                    <li class="@(Html.ActivePage("Blab", "SearchBlabs") == "selected" ? "active" : "")" role="presentation">@Html.ActionLink("Search", "SearchBlabs", "Blab")</li>
                    <li class="@(Html.ActivePage("Account", "Profile") == "selected" ? "active" : "")" role="presentation">@Html.ActionLink("Profile", "Profile", "Account")</li>
                    <li class="@(Html.ActivePage("Tools", "Tools") == "selected" ? "active" : "")" role="presentation">@Html.ActionLink("Tools", "Tools", "Tools")</li>
                    <li class="@(Html.ActivePage("Account", "LogOut") == "selected" ? "active" : "")" role="presentation">@Html.ActionLink("Logout", "LogOut", "Account")</li>
                </ul>
            </nav>
            <img src="@(Url.Content("~/Images/Tokyoship_Talk_icon.svg"))" height="100"
                 width="100">
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
